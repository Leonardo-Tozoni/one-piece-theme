{
  "name": "one-piece-theme",
  "description": "One Piece inspired themes - Set sail on the Grand Line with vibrant dark and light themes featuring treasure gold, ocean blues, and adventure colors!",
  "displayName": "One Piece Theme",
  "version": "2.0.0",
  "icon": "assets/icon.jpeg",
  "keywords": ["theme", "anime", "one piece", "dark theme", "light theme", "straw hat", "luffy", "pirate", "grand line"],
  "publisher": "LeonardoTozoni",
  "repository": {
    "type": "git",
    "url": "https://github.com/Leonardo-Tozoni/one-piece-theme"
  },
  "engines": {
    "vscode": "^1.22.0"
  },
  "categories": ["Themes"],
  "main": "./extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "themes": [
      {
        "label": "One Piece Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/one-piece.json"
      },
      {
        "label": "One Piece Light",
        "uiTheme": "vs",
        "path": "./themes/one-piece-light.json"
      }
    ],
    "commands": [
      {
        "command": "one-piece-theme.enableJollyRoger",
        "title": "One Piece: Enable Jolly Roger"
      },
      {
        "command": "one-piece-theme.disableJollyRoger",
        "title": "One Piece: Disable Jolly Roger"
      }
    ]
  },
  "scripts": {
    "package": "vsce package --no-yarn",
    "publish": "vsce publish --no-yarn"
  },
  "license": "MIT",
  "devDependencies": {
    "vsce": "^2.15.0"
  }
}
